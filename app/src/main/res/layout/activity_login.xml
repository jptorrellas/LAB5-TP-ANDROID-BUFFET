<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a55.lab5_tp_android_buffet.Activities.Login.LoginActivity"
    android:background="#E8E8F0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="wrap_content" >

        <!--Titulo-->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Login de Usuario"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textAlignment="center" />

        <!--SubTitulo-->
        <TextView
            android:id="@+id/tvSubTitulo"
            android:text="Bienvenido a la primera aplicaciÃ³n\n Buffet-UTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textAlignment="center" />

        <!--Imagen-->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/utnfra"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <!--Email-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <!--tvEmail-->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Email: "/>

            <!--etMail-->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="textEmailAddress"
                android:hint="Ingrese su email"/>

        </LinearLayout>

        <!--Clave-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <!--tvClave-->
            <TextView
                android:id="@+id/tvClave"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Clave: "/>

            <!--etClave-->
            <EditText
                android:id="@+id/etClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="Ingrese su clave"
                android:inputType="textPassword" />

        </LinearLayout>

        <!--Botones-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <!-- chkRecordar-->
            <CheckBox
                android:id="@+id/chkRecordar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Recordar credenciales"/>

            <!--btnIngresar-->
            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:backgroundTintMode="add"
                android:textColor="#fff"
                android:textSize="12dp"
                android:text="Ingresar"/>

            <!--btnRegistrarme-->
            <Button
                android:id="@+id/btnRegistrarme"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#36a420"
                android:textColor="#fff"
                android:textSize="12dp"
                android:text="Registrarme"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>